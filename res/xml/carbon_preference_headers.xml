<preference-headers xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <header
        android:title="@string/carbon_fibers_title" />

        <!-- Status Bar -->
        <header
            android:id="@+id/status_bar_settings"
            android:fragment="com.carbon.fibers.fragments.CarbonStatusBar"
            android:icon="@drawable/ic_settings_extdesk_hidenavbar"
            android:title="@string/status_bar_title"
            settings:advanced="true" />

        <!-- Hardw. Buttons/Navigation Bar -->
        <header
            android:id="@+id/button_settings"
            android:fragment="com.carbon.fibers.fragments.CarbonButtons"
            android:icon="@drawable/ic_settings_buttons"
            android:title="@string/button_pref_title"
            settings:advanced="true" />

        <!-- Pie control -->
        <header
            android:id="@+id/pie_settings"
            android:fragment="com.android.settings.carbon.PieControl"
            android:icon="@drawable/ic_settings_pie"
            android:title="@string/pie_control_title"
            settings:advanced="true" />

        <!-- General Interface -->
        <header
            android:id="@+id/interface_settings"
            android:fragment="com.carbon.fibers.fragments.CarbonInterface"
            android:icon="@drawable/ic_settings_interface"
            android:title="@string/interface_settings_title"
            settings:advanced="true" />

        <!-- Notification Drawer/Tiles Settings -->
        <header
            android:id="@+id/notification_drawer_settings"
            android:title="@string/notification_drawer_title"
            android:fragment="com.carbon.fibers.fragments.CarbonNotificationDrawerSettings"
            android:icon="@drawable/ic_settings_notification_drawer"
            settings:advanced="true" />

        <!-- Recents Settings -->
        <header
            android:id="@+id/recents_panel_settings"
            android:title="@string/recents_panel_settings"
            android:fragment="com.android.settings.carbon.CarbonRecentsSettings"
            android:icon="@drawable/ic_settings_backup"
            settings:advanced="true" />

        <!-- Advanced Settings -->
        <header
            android:id="@+id/carbon_more_device_settings"
            android:title="@string/more_device_settings_title"
            android:icon="@drawable/ic_settings_advanced_teal"
            android:fragment="com.carbon.fibers.fragments.CarbonMoreDeviceSettings" />

</preference-headers>
